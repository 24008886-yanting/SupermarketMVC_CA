<style>
  .inventory-table tbody tr {
    height: 90px;
  }

  .inventory-table td {
    vertical-align: middle;
  }

  .product-link {
    color: inherit;
    text-decoration: none;
    font-weight: 600;
  }

  .product-link:hover {
    color: #0d6efd;
  }
</style>

<%- include('partials/flashMessages') %>

<div class="container">
  <div class="text-center">
    <h2>Products from Supermarket App Database</h2>
  </div>
  <br>
  <table class="table table-hover small text-center inventory-table">
    <thead>
      <tr>
        <th width="120">Product Name</th>
        <th width="100">Product Image</th>
        <th width="60">Quantity</th>
        <th width="60">Price</th>
        <th width="90">Category</th>
        <th width="90">Origin</th>
        <th width="180">Description</th>
        <th width="70">Halal</th>
        <th width="60">Edit</th>
        <th width="70">Delete</th>
      </tr>
    </thead>
    <tbody>
      <% for(let i=0; i < products.length; i++) { %>
        <tr>
          <td><a class="product-link" href="/product/<%= products[i].id %>"><%= products[i].productName %></a></td>
          <td><img src="images/<%= products[i].image %>" width="20%"></td>
          <td>
            <%= products[i].quantity %>
          </td>
          <td>$<%= products[i].price.toFixed(2) %>
          </td>
          <td>
            <%= products[i].category %>
          </td>
          <td>
            <%= products[i].origin || "Not specified" %>
          </td>
          <td>
            <%= products[i].description || "No description" %>
          </td>
          <td>
            <%= products[i].halal ? "Yes" : "No" %>
          </td>
          <td>
            <a class="btn btn-warning btn-sm" href="/updateProduct/<%= products[i].id %>">Edit</a>
          </td>
          <td>
            <a class="btn btn-danger btn-sm" href="/deleteProduct/<%= products[i].id %>"
              onclick="return confirm('Are you sure you want to delete this product?')">Delete</a>
          </td>
        </tr>
        <% } %>
    </tbody>
  </table>
</div>
