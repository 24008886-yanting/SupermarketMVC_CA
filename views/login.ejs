<div class="container my-5">
  <div class="row justify-content-center">
    <div class="col-12 col-md-6">
      <div class="card shadow-sm">
        <div class="card-body">
          <h3 class="card-title mb-3">Login</h3>

          <% const flashSuccess = (messages && messages.length) ? messages : (locals && locals.success) || []; %>
          <% const flashError = (errors && errors.length) ? errors : (locals && locals.error) || []; %>

          <% if (flashSuccess && flashSuccess.length) { %>
            <div class="alert alert-success">
              <% flashSuccess.forEach(function(message) { %>
                <div><%= message %></div>
              <% }); %>
            </div>
          <% } %>

          <% if (flashError && flashError.length) { %>
            <div class="alert alert-danger">
              <% flashError.forEach(function(error) { %>
                <div><%= error %></div>
              <% }); %>
            </div>
          <% } %>

          <form action="/login" method="POST" class="needs-validation" novalidate>
            <div class="mb-3">
              <label for="email" class="form-label">Email</label>
              <input type="email" id="email" name="email" class="form-control" required>
            </div>
            <div class="mb-3">
              <label for="password" class="form-label">Password</label>
              <input type="password" id="password" name="password" class="form-control" required>
            </div>
            <div class="d-flex justify-content-end">
              <button type="submit" class="btn btn-primary">Login</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
