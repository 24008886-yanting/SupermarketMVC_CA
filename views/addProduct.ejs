<!-- Admin form for adding a new product -->
<div class="container mt-4">
  <h2 class="text-center mb-4">Add New Product</h2>
  <form action="/addProduct" method="POST" enctype="multipart/form-data" class="mx-auto" style="max-width: 650px;">
    <!-- Product name input -->
    <!-- Category dropdown -->
    <!-- Origin input -->
    <!-- Description input -->
    <!-- Halal selector -->
    <!-- Quantity input -->
